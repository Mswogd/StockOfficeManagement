@model IEnumerable<OfficeStock.Entity.FixedAsset>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sabit Kıymetler</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Id
        </th>
     
        <th>
            Demirbaş No
        </th>
        <th>
            Tanım
        </th>
        <th>
           Kullanıma Başlangıç Tarihi
        </th>
        <th>
            Teşhir Tarihi
        </th>
        <th>
            Değeri
        </th>
    
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
    
        <td>
            @Html.DisplayFor(modelItem => item.OfficeStockNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsageStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProcurementDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
       
     
      
        <td>
            @Html.ActionLink("Düzenle", "Update", new { id=item.Id }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.Id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
