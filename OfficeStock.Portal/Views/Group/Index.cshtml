@model IEnumerable<OfficeStock.Entity.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gruplar</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Grup Adı
        </th>
        <th>
            Grup Kodu
        </th>

    </tr>

@foreach (var item in Model) {
  <tr>
      <td>
          @Html.DisplayFor(modelItem => item.Id)
      </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>       
      <td>
          @Html.DisplayFor(modelItem => item.GroupCode)
      </td>     
        <td>
            @Html.ActionLink("Güncelle", "Update", new { id=item.Id }) |
            @Html.ActionLink("Görüntüle", "Details", new { id=item.Id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
